extends layout

block styles
  link(rel="stylesheet" href="poll.css")

block content
  .section#poll
    .is-narrow.div.mcenter
      h1 Poll - #{user}
        ul
          each anime in poll.list
            li
              .columns.is-mobile
                .column.is-10 #{anime.title}
                .column.is-2 #{anime.votes}
              .modal
                .modal-background
                .modal-content
                  .box(style='max-width: 200px; margin: 0 auto')
                    article.media
                      .media-left
                        figure
                          img(src=anime.image width='55px')
                      .media-content
                        .content
                          a(href=`https://myanimelist.net/anime/${anime.id}/` rel='noopener noreferrer' target='_blank' title=anime.title) #{anime.title}
                          p(style='text-align: center; padding-top: 15px')
                            button.button.is-primary(style='width: 50%') Vote!
                button.modal-close